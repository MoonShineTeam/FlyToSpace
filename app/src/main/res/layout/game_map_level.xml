<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/level_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/russo_one"
        app:layout_constraintBottom_toTopOf="@+id/level_image"
        app:layout_constraintEnd_toEndOf="@+id/level_image"
        app:layout_constraintStart_toStartOf="@+id/level_image" />

    <ImageView
        android:id="@+id/level_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onLvlClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/level_stars"
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/level_image"
        app:layout_constraintStart_toStartOf="@id/level_image"
        app:layout_constraintTop_toBottomOf="@id/level_image" />

</androidx.constraintlayout.widget.ConstraintLayout>