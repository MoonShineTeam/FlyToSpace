<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreen"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/start_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/bg_start_screen"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_start" />

        <ImageView
            android:id="@+id/bg_lights"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/bg_start_screen"
            app:srcCompat="@drawable/bg_lights" />

        <RelativeLayout
            android:id="@+id/clouds"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/grey_cloud1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="301dp"
                android:layout_marginEnd="362dp"
                android:layout_marginBottom="-40dp"
                android:contentDescription="@string/bg_start_screen"
                app:srcCompat="@drawable/bg_clouds_grey" />

            <ImageView
                android:id="@+id/grey_cloud2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="-132dp"
                android:layout_marginBottom="220dp"
                android:contentDescription="@string/bg_start_screen"
                app:srcCompat="@drawable/bg_clouds_grey" />

            <ImageView
                android:id="@+id/white_cloud1"
                android:layout_width="240dp"
                android:layout_height="144dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="449dp"
                android:layout_marginTop="316dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="-49dp"
                android:contentDescription="@string/bg_start_screen"
                app:srcCompat="@drawable/bg_clouds_white" />

            <ImageView
                android:id="@+id/white_cloud2"
                android:layout_width="240dp"
                android:layout_height="144dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="76dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="415dp"
                android:layout_marginBottom="177dp"
                android:contentDescription="@string/bg_start_screen"
                app:srcCompat="@drawable/bg_clouds_white" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>